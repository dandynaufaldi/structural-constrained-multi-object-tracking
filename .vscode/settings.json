{
    "python.pythonPath": "${workspaceFolder}/code/venv/Scripts/python.exe",
    "python.jediEnabled": false,
    "editor.formatOnSave": true,
    "python.formatting.autopep8Args": [
        "\"--max-line-length\"",
        "\"100\"",
        "\"--experimental\""
    ],
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 4, column_limit: 100}"
    ]
}